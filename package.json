{
  "name": "SPOT-Desktop",
  "description": "SPOT Desktop application",
  "author": "Faruk Diblen <f.diblen@esciencecenter.nl>",
  "version": "0.1.0",
  "main": "main.js",
  "scripts": {
  "start": "electron .",
  "get-spot": "svn export https://github.com/NLeSC/spot/trunk/public src",
  "dist-deb": "build --linux deb",
  "dist-rpm": "build --linux rpm",
  "dist-apk": "build --linux apk",
  "dist-arch": "build --linux pacman",
  "dist-mac": "build --mac",
  "dist-win": "build --win",
  "pack": "build --dir",
  "dist": "npm run dist-deb && npm run dist-rpm && npm run dist-arch && npm run dist-win && npm run dist-apk && npm run dist-mac",
  "clean": "rm -rf dist node_modules tmp",
  "build": {
    "appId": "nlesc",
    "mac": {
      "category": "spot.science"
    }
  }
  },
  "devDependencies": {
    "ajv": "^5.0.4-beta.0",
    "electron": "^1.6.2",
    "electron-builder": "^15.6.1"
  }
}
