{
  "name": "spot-desktop",
  "description": "SPOT Desktop application",
  "author": "Faruk Diblen <f.diblen@esciencecenter.nl>",
  "version": "0.1.0-alpha.2",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/NLeSC/spot.git"
  },
  "homepage": "https://github.com/NLeSC/spot.git",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "get-spot": "svn export https://github.com/NLeSC/spot/trunk temp && mv temp/dist src && rm -rf temp",
    "dist-linux": "build --linux deb pacman rpm zip tar.xz",
    "dist-mac": "build --mac dmg pkg zip",
    "dist-win": "build --win",
    "dist": "npm run dist-linux && npm run dist-win && npm run dist-mac",
    "clean": "rm -rf dist node_modules tmp",
    "build": {
      "appId": "spot.nlesc",
      "mac": {
        "category": "spot.science"
      }
    }
  },
  "devDependencies": {
    "ajv": "^5.0.4-beta.0",
    "electron": "^1.7.8",
    "electron-builder": "^15.6.4"
  }
}
